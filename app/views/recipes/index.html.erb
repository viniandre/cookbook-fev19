<h1>CookBook</h1>
<p>Bem-vindo ao maior livro de receitas online</p>

<%= link_to 'Enviar uma receita', new_recipe_path %>
<%= link_to 'Cadastrar tipo de receita', new_recipe_type_path %>
<%= link_to 'Cadastrar cozinha', new_cuisine_path %>
<%= link_to 'Minhas receitas', my_recipes_path %>

<h1>Receitas em destaque</h1>
<div class="favoritas"> 
<% @recipes.each do |recipe| %>
  <% if recipe.favorite? %>
  <h1><%= link_to recipe.title, recipe %> <%= image_tag 'star.png' %></h1>
  <ul>
    <li><%= recipe.recipe_type.name %></li>
    <li><%= recipe.cuisine.name %></li>
    <li><%= recipe.difficulty %></li>
    <li><%= recipe.cook_time_min %></li>
  </ul>
  <% end %>
<% end %>
</div>

<h1>Outras receitas</h1>
<div class="outras_receitas">
<% @recipes.each do |recipe| %>
  <h1><%= link_to recipe.title, recipe %></h1>
  <ul>
    <li><%= recipe.recipe_type.name %></li>
    <li><%= recipe.cuisine.name %></li>
    <li><%= recipe.difficulty %></li>
    <li><%= recipe.cook_time_min %></li>
  </ul>
<% end %>
</div>